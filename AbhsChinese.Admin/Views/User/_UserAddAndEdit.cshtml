<form action="@ViewBag.Action" method="post">
    <input type="hidden" name="id" value="" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">姓名</label>
        <div class="col-sm-10">
            <input required type="text" name="name" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">年龄</label>
        <div class="col-sm-10">
            <input required type="number" name="age" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">电话</label>
        <div class="col-sm-10">
            <input required type="text" name="phone" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">邮箱</label>
        <div class="col-sm-10">
            <input required type="email" name="email" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">头像</label>
        @{
            Html.RenderPartial("_Cropper", new ViewDataDictionary
            {
               { "ProfilePicture" , "profilePicture" }
            });
        }
        
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">爱好</label>
        <div class="col-sm-10">
            <textarea name="hobby"
                      style="min-height:60px;"
                      class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">简历</label>
        <div class="col-sm-10">
            <input type="text" name="resume.content" class="form-control">
        </div>
    </div>
    <div class="select-group">
        <select class="form-control" data-url="/User/GetOptions" data-region="1"
                data-parent-id="-1"></select>
        <select class="form-control" data-url="/User/GetOptions" data-region="2"
                data-parent-id="-1"></select>
        <select class="form-control" data-url="/User/GetOptions" data-region="3"
                data-parent-id="-1"></select>
    </div>
</form>