@{
    ViewBag.Title = "Forms";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <!------------------------------------ Normal Form Start ---------------------------------->
        <div class="col-lg-6">
            <form action="/Product/Add" method="post">
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">ID</label>
                    <div class="col-lg-10">
                        <p class="form-control-plaintext">2</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Phone</label>
                    <div class="col-lg-10">
                        <input type="text" disabled class="form-control" value="123456678">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Normal</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="userName" class="col-lg-2 col-form-label">User Name</label>
                    <div class="col-lg-10">
                        <input name="userName"
                               required
                               maxlength="5"
                               value="sfsjlfjsljfls"
                               type="text" placeholder="User Name" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Email</label>
                    <div class="col-lg-10">
                        <input name="email"
                               autocomplete="email"
                               type="email" placeholder="Email" class="form-control" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Password</label>
                    <div class="col-lg-10">
                        <input id="cPassword"
                               name="password"
                               autocomplete="new-password"
                               type="password" placeholder="Password" class="form-control" required>
                    </div>
                </div>
                <div class="form-group row">
                    { Html.RenderPartial("_FileUpload"); }
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Confirm Password</label>
                    <div class="col-lg-10">
                        <input equalTo="#cPassword"
                               autocomplete="new-password"
                               type="password" placeholder="Confirm password" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Checkboxes &amp; radios <br><small class="text-navy">Custom elements</small></label>
                    <div class="col-sm-10">
                        <div class="i-checks">
                            <label>
                                <input type="checkbox" value="">
                                <i></i>Option one
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="checkbox" value="" checked>
                                <i></i>Option two checked
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="radio" value="" name="a" checked>
                                <i></i>Option three checked and disabled
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="radio" name="a" value="">
                                <i></i>Option four disabled
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button class="btn btn-sm btn-white" type="submit">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
        <!------------------------------------ Normal Form end ------------------------------------>
        <!------------------------------------ Ajax Form Start ---------------------------------->
        <div class="col-lg-6">
            <form id="ajaxForm" action="/Product/AjaxAdd" method="post">
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">ID</label>
                    <div class="col-lg-10">
                        <p class="form-control-plaintext">2</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Phone</label>
                    <div class="col-lg-10">
                        <input type="text" disabled class="form-control" value="123456678">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Normal</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="userName" class="col-lg-2 col-form-label">User Name</label>
                    <div class="col-lg-10">
                        <input name="userName"
                               required
                               maxlength="5"
                               value="sfsjlfjsljfls"
                               type="text" placeholder="User Name" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Email</label>
                    <div class="col-lg-10">
                        <input name="email"
                               autocomplete="email"
                               type="email" placeholder="Email" class="form-control" required>
                    </div>
                </div>
                <div class="form-group row">
                    @{ Html.RenderPartial("_BigFileUpload"); }
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Password</label>
                    <div class="col-lg-10">
                        <input id="cPassword2"
                               name="password2"
                               autocomplete="new-password"
                               type="password" placeholder="Password" class="form-control" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-2 col-form-label">Confirm Password</label>
                    <div class="col-lg-10">
                        <input equalTo="#cPassword2"
                               autocomplete="new-password"
                               type="password" placeholder="Confirm password" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Checkboxes &amp; radios <br><small class="text-navy">Custom elements</small></label>
                    <div class="col-sm-10">
                        <div class="i-checks">
                            <label>
                                <input type="checkbox" value=""> <i></i> Option one
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="checkbox" value="" checked>
                                <i></i> Option two checked
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="radio" value="" name="a" checked>
                                <i></i>Option three checked and disabled
                            </label>
                        </div>
                        <div class="i-checks">
                            <label>
                                <input type="radio" name="a" value="">
                                <i></i>Option four disabled
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button id="btn_SignIn" class="btn btn-sm btn-white" type="button">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
        <!------------------------------------ Ajax Form end ------------------------------------>
    </div>
</div>

@section scripts{
    <script>
        $(function () {
            $("#btn_SignIn").on('click', function () {
                $('#ajaxForm').ajaxSubmit(function (response) {
                    alert("这" + (response ? "" : "不") + "是Ajax提交")
                });
            });
        });
    </script>
}