@model AbhsChinese.Admin.Models.Question.QuestionBasic

<div class="form-group row">
    <label class="col-sm-2 col-form-label">年级</label>
    <div class="col-sm-10">
        @Html.EditorFor(m => m.Grade)
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">难度</label>
    <div class="col-sm-10">
        @Html.EditorFor(m => m.Difficulty)
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">关键字</label>
    <div class="col-sm-10">
        @Html.EditorFor(m => m.Keywords)
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">主知识点</label>
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.MainKnowledge.KnowledgeId, new { @class = "form-control" })
    </div>
</div>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">次知识点</label>
    <div class="col-sm-10">
        @Html.EditorFor(m => m.Knowledges, new { @class = "form-control" })
    </div>
</div>