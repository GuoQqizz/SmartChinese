<div class="hr-line-dashed"></div>
<div class="form-group row">
    <label class="col-1 col-form-label text-right required">年级</label>
    <div class="col-11">
        <select name="grade"
                class="select2 form-control"
                data-ajax--url="@Url.Action("GetGrades", "Select2")"
                data-ajax--cache="true"
                data-placeholder="请选择年级" data-allow-clear="true"></select>
        <label for="grade" class="error"></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-1 col-form-label text-right required">难度</label>
    <div class="col-11">
        <select name="difficulty"
