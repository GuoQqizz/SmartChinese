                data-ajax--url="@Url.Action("GetDifficulties", "Select2")"
                data-ajax--cache="true"
                data-placeholder="请选择难度" data-allow-clear="true"></select>
        <label for="difficulty" class="error"></label>
    </div>
</div>
<div class="form-group row">
    <label class="col-1 col-form-label text-right required">关键字</label>
    <div class="col-11">
        <input name="keywords" class="tagsinput form-control"
