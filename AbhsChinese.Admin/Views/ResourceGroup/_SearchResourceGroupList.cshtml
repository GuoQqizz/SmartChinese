<form role="form" class="form-inline search-form" style="margin-top:0px;" id="form_search_resourcegroup">
    <input type="hidden" name="groupType" value="" />
    <div class="form-group">
        <input type="text" class="form-control" name="Id" placeholder="按编号搜索" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="Name" placeholder="按资源组搜索" />
    </div>
    <div class="form-group">
        <select class="select2 form-control" data-ajax--url="@Url.Action("GetGrades","Select2")"
                data-ajax--cache="true"
                data-placeholder="请选择年级" data-allow-clear="true"
                name="Grade">
            <option></option>
        </select>
    </div>
    <div class="col">
        <button class="btn btn-white search" type="button">
            搜索
        </button>
    </div>
</form>
