@using System.Web.UI.WebControls
@using AbhsChinese.Domain.Dto.Response
@model DtoTextResource
@{
    ViewBag.PageTitle = "添加文本资源";
    Layout = "~/Views/Shared/_Forms.cshtml";
}
@section Styles{
    <style>
        .verifyTip {
            color: red;
        }

        .wrapper-content {
            padding: 20px 10px 0px;
        }
    </style>
}



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox" style="margin-bottom: 0px;">
                <div class="ibox-content" style="border:none">
                    <div class="form-group  row">
                        <label class="col-lg-2 col-form-label text-center">名称：</label>
                        <div class="col-lg-10">
                            <p class="form-control-plaintext">@(Model != null ? Model.Ytr_Name : "")</p>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label text-center">类型</label>
                        <div class="col-lg-10">
                            <p class="form-control-plaintext">@(Model != null ? Model.TextType : "")</p>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label text-center">年级：</label>
                        <div class="col-lg-10">
                            <p class="form-control-plaintext">@(Model != null ? Model.Grade : "")</p>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label text-center">关键字：</label>
                        <div class="col-lg-10">
                            <p class="form-control-plaintext">@(Model != null ? Model.Ytr_Keywords : "")</p>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label text-center">文本内容：</label>
                        <div class="col-lg-10">
                            <div style="height:200px;">
                                @(Model != null ? Model.Yxo_Content : "")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




