@using AbhsChinese.Admin.Models.Category
@model CategoryViewModel[]
@{
    ViewBag.PageTitle = "分类设置";
    ViewBag.ListTitle = "分类设置";
}
@section Styles {
    @Styles.Render("~/bundles/css/abhsTableStyles")
    <style>
        #page-wrapper {
            height:100%;
        }

        #wrapper {
            height:100%;
        }
        .wrapper {
            height:calc(100% - 120px);
        }
    </style>
}

<div class="ibox" style="height: calc(100% - 15px);">
    <div class="ibox-content" style="height:100%">
        <div class="row">
            <div class="col-12">
                <div class="table_container">
                    <div id="table_resource" class="abhs_table">
                        <div class="abhs_table_thead" style="width: 100%; height: 46px;">
                            <table class="table  tableBordered tableStriped tableHover">
                                <thead>
                                    <tr><th style="">编号</th><th style="">分类描述</th><th style="">分类</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td style="text-align:center;">@item.Id</td>
                                        <td style="text-align:center;">@item.Description</td>
                                        <td style="text-align:center;">@item.Category</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="abhs_table_tbody" style="width: 100%; max-height: 500px;">
                            <table class="table  tableBordered tableStriped tableHover">
                                <thead>
                                    <tr><th style="">编号</th><th style="">分类描述</th><th style="">分类</th></tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td style="text-align:center;">@item.Id</td>
                                        <td style="text-align:center;">@item.Description</td>
                                        <td style="text-align:center;">@item.Category</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12"></div>
        </div>
    </div>
</div>
