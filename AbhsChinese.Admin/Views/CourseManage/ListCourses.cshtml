
@{
    ViewBag.PageTitle = "课程上下架";
}

<div class="ibox">
    <div class="ibox-content" style="padding:8px;">
        <div class="row">
            <div class="col-12">
                <button type="button" name="btn_state"
                        data-state="-1" class="btn btn-primary">
                    全部
                </button>
                <button type="button" name="btn_state"
                        data-state="2" class="btn btn-default">
                    待上架
                </button>
                <button type="button" name="btn_state"
                        data-state="3" class="btn btn-default">
                    已上架
                </button>
                <button type="button" name="btn_state"
                        data-state="4" class="btn btn-default">
                    已下架
                </button>
                <button type="button" name="btn_state"
                        data-state="1" class="btn btn-default">
                    未定价
                </button>
            </div>
        </div>
        <div class="row" style="margin-top:-8px;">
            <div class="col-12">
                <form role="form" class="form-inline search-form" id="form_search">
                    <input type="checkbox" checked class="search-hide" name="status" value="1" />
                    <input type="checkbox" checked class="search-hide" name="status" value="2" />
                    <input type="checkbox" checked class="search-hide" name="status" value="3" />
                    <input type="checkbox" checked class="search-hide" name="status" value="4" />
                    <div class="form-group">
                        <input type="text" name="id" placeholder="请输入编号" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="name" placeholder="请输入名称" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="ownerName" placeholder="请输入负责人" class="form-control">
                    </div>
                    <div class="form-group">
                        <select class="select2 normal" data-ajax--url="@Url.Action("GetCurriculumCategaries","Select2")"
                                data-ajax--cache="true"
                                data-placeholder="请选择类型" data-allow-clear="true"
                                name="courseType"></select>
                    </div>
                    <div class="form-group">
                        <select class="select2 normal" data-ajax--url="@Url.Action("GetGrades","Select2")"
                                data-ajax--cache="true"
                                data-placeholder="请选择年级" data-allow-clear="true"
                                name="grade"></select>
                    </div>
                    <button class="btn btn-white search" type="button">搜索</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12 table_container">
                <div id="table_list"></div>
                <div class="pagination"></div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/bundles/css/abhsTableStyles")
    <style>
        #form_search .search-hide {
            display: none;
        }

        ul {
            padding-inline-start: 0px;
            margin-bottom: 0px;
        }

        .img-info {
            width: 50px;
            height: 50px;
        }

        .short-text {
            word-wrap: break-word;
            word-break: normal;
            max-height: 40px;
            overflow: hidden;
            text-overflow: ellipsis;
            position:relative;
        }
            
    </style>
}

@section Scripts{
    @Scripts.Render("~/bundles/js/abhsTable")
    <script src="~/Scripts/common/abhs.common.js"></script>
    <script src="~/Scripts/common/select2.normal.init.js"></script>
    <script src="~/Scripts/PageScripts/coursemanage.list.js"></script>
}

