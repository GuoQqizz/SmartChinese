
@{
    ViewBag.Title = "人脸绑定";
}

@section Styles{
    <style>
        html, body {
            height: 100%;
        }

        body {
            background-image: url(../../Images/StudentInfo/loginbj.jpg);
            background-repeat: no-repeat;
            background-position: center bottom;
            background-size: 100% auto;
            background-color: #f6f7f9;
        }
        .facebtn {
            cursor:pointer;
        }
    </style>
}

@section Scripts{
    <script>
        $('.facebtn').click(function () {
            location.href = '@Url.Action("LoginIndex","Login",new { active=1})';
        })
    </script>
}
<div class="bodybjbox" style="position:fixed;left:0;top:0;background: url(../../Images/StudentInfo/loginbj.jpg) center bottom #f6f7f9;width:100%;height:100%;z-index:0;"></div>
<div class="loginpage">
    <div class="loginbox">
        <div class="logintopboxt"><img src="~/Images/StudentInfo/loginpagetop.png" /></div>
        <div class="logintopboxc">
            <div class="logo"><img src="~/Images/StudentInfo/logo1.png" /></div>
            <div class="lbox"><img src="~/Images/StudentInfo/success1.png" /></div>
            <div class="succinfo">绑定成功</div>
            <div class="textinfo">您可以使用人脸识别登录</div>
            <div class="loginbtn" style="padding: 20px 0 60px;"><button type="button" class="facebtn">立即体验</button></div>
        </div>
        <div class="logintopboxb"><img src="~/Images/StudentInfo/loginpagebottom.png" /></div>
    </div>
</div>

