@model int?
@{
    ViewBag.Title = "学生登录";
}

@section Styles{
    <link href="~/Content/layer/theme/default/layer.css" rel="stylesheet" />
    <style>
        html {
            position: relative;
            background: url(../../Images/StudentInfo/loginbj.jpg) center bottom #f6f7f9;
        }

        html, body {
            height: 100%;
        }

        body {
            background-image: url(../../Images/StudentInfo/loginbj.jpg);
            background-repeat: no-repeat;
            background-position: center bottom;
            background-size: 100% auto;
            background-color: #f6f7f9;
        }
        .login_act,.login_act1,.feachBtn,.startface {
            cursor:pointer;
        }
    </style>
}

@section Scripts{
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Scripts/StudentInfo/webcam.js"></script>
    @Scripts.Render("~/bundles/login")
}
<div class="loginpage">
    <div class="loginbox">
        <div class="logintopboxt">
            <img src="~/Images/StudentInfo/loginpagetop.png" />
        </div>
        <div class="logintopboxc">
            <div class="logo"><img src="~/Images/StudentInfo/logo1.png" /></div>
            <div class="loginc">
                <div class="itembox" @(Model == 0 ? "" : "style=display:none;")>
                    <div class="logintext">用户名密码登录</div>
                    <div class="logininp">
                        <input class="mobilevalue1" type="text" placeholder="请输入手机号码" maxlength="11"/>
                        <!-- <div class="successtip"><img src="~/Images/StudentInfo/successmsg.png" /></div> -->
                    </div>
                    <div class="errormsg">
                        <div class="errortext"><img src="~/Images/StudentInfo/error.png" /> <span id="errorTip">请输入正确的手机号码</span></div>
                    </div>
                    <div class="logininp">
                        <input class="passwordvalue" type="password" placeholder="请输入密码" maxlength="18"/>
                        <!-- <div class="successtip"><img src="~/Images/StudentInfo/successmsg.png" /></div> -->
                    </div>
                    <div class="errormsg">
                        <div class="errortext"><img src="~/Images/StudentInfo/error.png" /> 请输入密码</div>
                    </div>
                    <div class="loginbtn"><button type="button" class="login_act" id="btnlogin1">登录</button></div>
                    <div class="loginbtn"><button type="button" class="login_act" style="display:none;" id="btnlogin2">登录</button></div>
                    <div class="logintext1"><a href="@Url.Action("ForgetPwd","Login")">忘记密码？</a></div>
                </div>
                <div class="itembox" @(Model == 1 ? "" : "style=display:none;")>
                    <div class="logintext">人脸识别登录</div>
                    <div class="faceboxc">
                        <div class="face">
                            <div id="face-box" class="facebox">
                                <div class="bg">
                                    <div class="pane move"></div>
                                    <div id="my_camera"></div>
                                </div>
                            </div>
                        </div>
                        <div class="loadimg"><img src="~/Images/StudentInfo/loadimg.jpg" /></div>
                        <div class="faceinfo textcenter">登录验证中</div>
                        <div class="faceinfo textcenter">已有账号，<a href="@Url.Action("FaceBind","Login")">绑定人脸识别</a></div>
                    </div>
                    <div class="faceboxc1" style="display: none;">
                        <div class="face1">
                            <img src="" class="faceimg1" />
                        </div>
                        <div class="failface"><img src="~/Images/StudentInfo/error.png" />验证未通过</div>
                        <div class="failface1">您可以<span class="startface">重新人脸识别</span>再次验证</div>
                    </div>
                    <div class="faceboxc2" style="display: none;">
                        <div class="face1">
                            <img src="" class="faceimg1" />
                        </div>
                        <div class="failface" style="color: #818181;"><img src="~/Images/StudentInfo/success.png" />验证通过</div>
                        <div class="failface1">登录成功，请稍后...</div>
                    </div>
                </div>
                <div class="itembox" @(Model == 2 ? "" : "style=display:none;")>
                    <div class="logintext">短信验证码登录</div>
                    <div class="logininp">
                        <span status="1" class="feachBtn">发送验证码</span>
                        <input class="mobilevalue" type="text" placeholder="请输入手机号码" maxlength="11"/>
                        <!-- <div class="successtip"><img src="~/Images/StudentInfo/successmsg.png" /></div> -->
                    </div>
                    <div class="errormsg">
                        <div class="errortext"><img src="~/Images/StudentInfo/error.png" /> <span>请输入正确的手机号码</span></div>
                    </div>
                    <div class="logininp">
                        <input class="smsCode" type="text" placeholder="请输入验证码" maxlength="4"/>
                        <!-- <div class="successtip"><img src="~/Images/StudentInfo/successmsg.png" /></div> -->
                    </div>
                    <div class="errormsg">
                        <div class="errortext"><img src="~/Images/StudentInfo/error.png" /> <span>请输入验证码</span></div>
                    </div>
                    <div class="loginbtn"><button type="button" class="login_act1">登录</button></div>
                </div>
            </div>
            <div class="loginp"><span>其他登录方式</span></div>
            <div class="logintype">
                <div class="typeitem fl" status="1" @(Model == 0 ? "style=display:none;" : "")>
                    <div class="typebox">
                        <div class="typeimg"><img src="~/Images/StudentInfo/pass.png" /></div>
                        <div class="typetext">账号密码</div>
                    </div>
                </div>
                <!-- <div class="typeitem fl">
                    <div class="typebox">
                        <div class="typeimg"><img src="~/Images/StudentInfo/img2.png" /></div>
                        <div class="typetext">微信扫码</div>
                    </div>
                </div> -->
                <div class="typeitem fl" status="2" @(Model == 1 ? "style=display:none;" : "")>
                    <div class="typebox">
                        <div class="typeimg"><img src="~/Images/StudentInfo/img1.png" /></div>
                        <div class="typetext">人脸识别</div>
                    </div>
                </div>
                <div class="typeitem fl" status="3" @(Model == 2 ? "style=display:none;" : "")>
                    <div class="typebox">
                        <div class="typeimg"><img src="~/Images/StudentInfo/img3.png" /></div>
                        <div class="typetext">短信验证</div>
                    </div>
                </div>
            </div>
            @*<div class="logintext2">没有账号？<a href="@Url.Action("RegIndex","Login")">请注册</a></div>*@
            <div style="height:10px;"></div>
        </div>
        <div class="logintopboxb"><img src="~/Images/StudentInfo/loginpagebottom.png" /></div>
    </div>
</div>
<input type="hidden" value="@Model" id="active" />

<div class="codewindow" style="display: none;">
    <div class="showwindow"></div>
    <div class="showwindowcontent">
        <div class="box">
            <div class="boxc">
                <div class="closepaydepop">
                    <img class="closepaydepopimg" src="~/Images/StudentInfo/c1.png" />
                </div>
                <div class="textiinfo textcenter">信息验证</div>
                <div class="codepop"><input placeholder="请输入验证码" type="text" id="txt_Code" maxlength="4"/></div>
                <div class="codepop1"><img id="imgcode" src="" /><a id="switchCode" href="javascript:void(0);">看不清,换一张</a></div>
                <div class="codeerror" style="display:none;"><img src="~/Images/StudentInfo/error.png" /><span>验证码错误</span></div>
                <div class="btn" id="btnok1"><button type="button" class="codepopsub" >确定</button></div>
                <div class="btn" id="btnok2" style="display:none;"><button type="button" class="codepopsub" >登录</button></div>
            </div>
        </div>
    </div>
</div>

<div class="chosewindow2" style="display:none;">
    <div class="showwindow"></div>
    <div class="showwindowcontent">
        <div class="box">
            <div class="boxc">
                <div class="closepaydepop1">
                    <img class="closepaydepopimg" src="/Images/StudentInfo/c1.png" onclick="closeVideo()" />
                </div>
                <div class="textiinfo textcenter">提示信息</div>
                <div class="textinfo1">浏览器不支持访问摄像头</div>
                <div class="btn" style="text-align:center;">
                    @*<button type="button" class="sub" onclick="btnYes()">确定</button>*@
                    <button type="button" class="codepopsub" style="float:initial;" onclick="closeVideo()">确定</button>
                </div>
            </div>
        </div>
    </div>
</div>
